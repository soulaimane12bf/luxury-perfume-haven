# Preferred single URL form (PlanetScale etc.)
DB_URL=mysql://USER:PASSWORD@HOST:3306/DBNAME

# Or classic fields
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=perfume_haven
DB_PORT=3306

# SSL for serverless DBs (PlanetScale)
DB_USE_SSL=true

# Server Configuration
PORT=5000
NODE_ENV=production
FRONTEND_ORIGIN=https://YOUR_FRONTEND_DOMAIN
SEED=false

# JWT Configuration
JWT_SECRET=replace-with-strong-secret
